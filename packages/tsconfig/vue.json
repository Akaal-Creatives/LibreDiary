{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "allowImportingTsExtensions": true
  }
}
