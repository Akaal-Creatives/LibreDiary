{
  "name": "@librediary/server",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/sensible": "^6.0.0",
    "@hocuspocus/server": "^3.4.4",
    "@librediary/shared": "workspace:*",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.2.0",
    "arctic": "^3.7.0",
    "argon2": "^0.44.0",
    "fastify": "^5.2.0",
    "nodemailer": "^8.0.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "yjs": "^13.6.29",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@librediary/eslint-config": "workspace:*",
    "@librediary/tsconfig": "workspace:*",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^7.0.9",
    "@vitest/coverage-v8": "^4.0.18",
    "prisma": "^6.2.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
