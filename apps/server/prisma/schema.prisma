// LibreDiary Database Schema
// Phase 1: Core models only

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerified   Boolean   @default(false)
  emailVerifiedAt DateTime?
  passwordHash    String?
  name            String?
  avatarUrl       String?
  locale          String    @default("en")

  // Notification preferences (JSON)
  // Controls which notification types send emails
  // Default: all enabled (empty object means all enabled)
  notificationPrefs Json @default("{}")

  // Super Admin flag (platform-wide)
  isSuperAdmin Boolean @default(false)

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft delete

  // Relations
  memberships        OrganizationMember[]
  createdPages       Page[]               @relation("PageCreatedBy")
  updatedPages       Page[]               @relation("PageUpdatedBy")
  sessions           Session[]
  accounts           Account[]            // OAuth linked accounts
  invitesSent        Invite[]             @relation("InvitesSent")
  favorites          Favorite[]
  pageVersions       PageVersion[]        @relation("PageVersionCreatedBy")
  pagePermissions    PagePermission[]     @relation("PagePermissionUser")
  grantedPermissions PagePermission[]     @relation("PagePermissionGrantedBy")
  comments           Comment[]            @relation("CommentCreatedBy")
  resolvedComments   Comment[]            @relation("CommentResolvedBy")
  mentions           Mention[]            @relation("MentionedUser")
  notifications      Notification[]
  createdDatabases   Database[]           @relation("DatabaseCreatedBy")
  createdDatabaseRows DatabaseRow[]       @relation("DatabaseRowCreatedBy")

  @@index([email])
  @@index([deletedAt])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  userAgent    String?
  ipAddress    String?
  lastActiveAt DateTime @default(now())
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

// OAuth linked accounts (GitHub, Google, etc.)
model Account {
  id                String   @id @default(cuid())
  userId            String
  provider          String // "github", "google"
  providerAccountId String // The user's ID from the OAuth provider

  // OAuth tokens (optional, stored if needed for API calls)
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId]) // One account per provider per user
  @@unique([userId, provider])            // User can only link one account per provider
  @@index([userId])
}

model VerificationToken {
  id         String    @id @default(cuid())
  identifier String
  token      String    @unique
  type       TokenType
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  usedAt     DateTime?

  @@index([identifier])
  @@index([token])
}

model Invite {
  id             String       @id @default(cuid())
  email          String
  token          String       @unique
  organizationId String
  role           OrgRole      @default(MEMBER)
  invitedById    String
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy      User         @relation("InvitesSent", fields: [invitedById], references: [id])

  @@index([email])
  @@index([token])
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

// ============================================
// ORGANIZATIONS & MEMBERSHIPS
// ============================================

model Organization {
  id   String @id @default(cuid())
  name String
  slug String @unique

  // Branding
  logoUrl     String?
  accentColor String? @default("#6366f1") // Indigo

  // Settings
  allowedDomains String[] @default([]) // Domain lockdown (e.g., ["company.com", "corp.com"])

  // AI Settings
  aiEnabled Boolean @default(true)

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  members   OrganizationMember[]
  pages     Page[]
  invites   Invite[]
  databases Database[]

  @@index([slug])
  @@index([deletedAt])
}

model OrganizationMember {
  id             String  @id @default(cuid())
  organizationId String
  userId         String
  role           OrgRole @default(MEMBER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// PAGES & CONTENT
// ============================================

model Page {
  id             String @id @default(cuid())
  organizationId String

  // Hierarchy
  parentId String?
  position Int     @default(0) // For ordering siblings

  // Content
  title    String  @default("Untitled")
  icon     String? // Emoji or icon identifier
  coverUrl String?

  // Yjs document state (stored as bytes)
  yjsState Bytes?

  // HTML content (for REST-based saving before Yjs integration)
  htmlContent String?

  // Sharing
  isPublic   Boolean @default(false)
  publicSlug String? @unique

  // Soft delete
  trashedAt DateTime?

  // Audit
  createdById String
  updatedById String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  organization Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  parent       Page?             @relation("PageHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children     Page[]            @relation("PageHierarchy")
  createdBy    User              @relation("PageCreatedBy", fields: [createdById], references: [id])
  updatedBy    User?             @relation("PageUpdatedBy", fields: [updatedById], references: [id])
  favorites    Favorite[]
  versions     PageVersion[]
  permissions  PagePermission[]
  comments     Comment[]
  databases    Database[]

  @@index([organizationId])
  @@index([parentId])
  @@index([trashedAt])
  @@index([publicSlug])
  @@index([createdById])
}

// ============================================
// PAGE VERSIONS (Version History)
// ============================================

model PageVersion {
  id        String   @id @default(cuid())
  pageId    String
  version   Int
  title     String
  yjsState  Bytes?
  createdById String
  createdAt DateTime @default(now())

  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  createdBy User     @relation("PageVersionCreatedBy", fields: [createdById], references: [id])

  @@unique([pageId, version])
  @@index([pageId])
}

// ============================================
// PAGE PERMISSIONS
// ============================================

model PagePermission {
  id     String          @id @default(cuid())
  pageId String
  userId String? // Nullable for guest/public access

  // Permission level
  level PermissionLevel @default(VIEW)

  // For guest access links
  shareToken String?   @unique
  expiresAt  DateTime? // Optional expiration for share links

  // Audit
  grantedById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  page      Page  @relation(fields: [pageId], references: [id], onDelete: Cascade)
  user      User? @relation("PagePermissionUser", fields: [userId], references: [id], onDelete: Cascade)
  grantedBy User  @relation("PagePermissionGrantedBy", fields: [grantedById], references: [id])

  @@unique([pageId, userId]) // One permission per user per page
  @@index([pageId])
  @@index([userId])
  @@index([shareToken])
}

enum PermissionLevel {
  VIEW        // Can only view the page
  EDIT        // Can edit content but not share or delete
  FULL_ACCESS // Can edit, share, and manage the page
}

// ============================================
// FAVORITES
// ============================================

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  pageId    String
  position  Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([userId, pageId])
  @@index([userId])
}

// ============================================
// SYSTEM SETTINGS
// ============================================

model SystemSettings {
  id    String @id @default("system")

  // Setup state
  setupCompleted   Boolean   @default(false)
  setupCompletedAt DateTime?
  setupCompletedBy String?

  // General settings
  siteName        String @default("LibreDiary")
  allowSignups    Boolean @default(false) // Invite-only by default

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// COMMENTS
// ============================================

model Comment {
  id     String @id @default(cuid())
  pageId String

  // Threading - parentId for replies
  parentId String?

  // Inline comments - reference to specific block in editor
  blockId String?

  // Content
  content String

  // Resolution status
  isResolved Boolean @default(false)
  resolvedAt DateTime?
  resolvedById String?

  // Audit
  createdById String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  page       Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  parent     Comment?  @relation("CommentThread", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentThread")
  createdBy  User      @relation("CommentCreatedBy", fields: [createdById], references: [id])
  resolvedBy User?     @relation("CommentResolvedBy", fields: [resolvedById], references: [id])
  mentions   Mention[]

  @@index([pageId])
  @@index([parentId])
  @@index([blockId])
  @@index([createdById])
}

// ============================================
// MENTIONS
// ============================================

model Mention {
  id        String @id @default(cuid())
  commentId String
  userId    String // The mentioned user

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation("MentionedUser", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId]) // One mention per user per comment
  @@index([commentId])
  @@index([userId])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id     String           @id @default(cuid())
  userId String           // Recipient
  type   NotificationType

  // Content
  title   String
  message String?

  // Context data (JSON) - pageId, commentId, etc.
  data Json?

  // Status
  isRead Boolean @default(false)
  readAt DateTime?

  // Email tracking
  emailSent   Boolean   @default(false)
  emailSentAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

enum NotificationType {
  MENTION           // Someone mentioned you in a comment
  COMMENT_REPLY     // Someone replied to your comment
  PAGE_SHARED       // A page was shared with you
  COMMENT_RESOLVED  // Your comment was resolved
  INVITATION        // You were invited to an organization
}

// ============================================
// DATABASES (Structured Tables)
// ============================================

enum PropertyType {
  TEXT
  NUMBER
  SELECT
  MULTI_SELECT
  DATE
  CHECKBOX
  URL
  EMAIL
  PHONE
  PERSON
  FILES
  RELATION
  ROLLUP
  FORMULA
  CREATED_TIME
  CREATED_BY
  UPDATED_TIME
  UPDATED_BY
}

enum ViewType {
  TABLE
  KANBAN
  CALENDAR
  GALLERY
}

model Database {
  id             String   @id @default(cuid())
  organizationId String
  pageId         String?
  name           String
  createdById    String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  organization Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  page         Page?              @relation(fields: [pageId], references: [id], onDelete: SetNull)
  createdBy    User               @relation("DatabaseCreatedBy", fields: [createdById], references: [id])
  properties   DatabaseProperty[]
  views        DatabaseView[]
  rows         DatabaseRow[]

  @@index([organizationId])
  @@index([pageId])
  @@index([createdById])
}

model DatabaseProperty {
  id         String       @id @default(cuid())
  databaseId String
  name       String
  type       PropertyType @default(TEXT)
  position   Int          @default(0)
  config     Json?

  // Relations
  database Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)

  @@index([databaseId])
  @@index([databaseId, position])
}

model DatabaseView {
  id         String   @id @default(cuid())
  databaseId String
  name       String
  type       ViewType @default(TABLE)
  position   Int      @default(0)
  config     Json?

  // Relations
  database Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)

  @@index([databaseId])
  @@index([databaseId, position])
}

model DatabaseRow {
  id         String @id @default(cuid())
  databaseId String
  position   Int    @default(0)
  cells      Json   @default("{}")
  createdById String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  database  Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  createdBy User     @relation("DatabaseRowCreatedBy", fields: [createdById], references: [id])

  @@index([databaseId])
  @@index([databaseId, position])
  @@index([createdById])
}
