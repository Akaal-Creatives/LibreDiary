// LibreDiary Database Schema
// Phase 1: Core models only

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerified   Boolean   @default(false)
  emailVerifiedAt DateTime?
  passwordHash    String?
  name            String?
  avatarUrl       String?
  locale          String    @default("en")

  // Super Admin flag (platform-wide)
  isSuperAdmin Boolean @default(false)

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft delete

  // Relations
  memberships        OrganizationMember[]
  createdPages       Page[]               @relation("PageCreatedBy")
  updatedPages       Page[]               @relation("PageUpdatedBy")
  sessions           Session[]
  accounts           Account[]            // OAuth linked accounts
  invitesSent        Invite[]             @relation("InvitesSent")
  favorites          Favorite[]
  pageVersions       PageVersion[]        @relation("PageVersionCreatedBy")
  pagePermissions    PagePermission[]     @relation("PagePermissionUser")
  grantedPermissions PagePermission[]     @relation("PagePermissionGrantedBy")

  @@index([email])
  @@index([deletedAt])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  userAgent    String?
  ipAddress    String?
  lastActiveAt DateTime @default(now())
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

// OAuth linked accounts (GitHub, Google, etc.)
model Account {
  id                String   @id @default(cuid())
  userId            String
  provider          String // "github", "google"
  providerAccountId String // The user's ID from the OAuth provider

  // OAuth tokens (optional, stored if needed for API calls)
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId]) // One account per provider per user
  @@unique([userId, provider])            // User can only link one account per provider
  @@index([userId])
}

model VerificationToken {
  id         String    @id @default(cuid())
  identifier String
  token      String    @unique
  type       TokenType
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  usedAt     DateTime?

  @@index([identifier])
  @@index([token])
}

model Invite {
  id             String       @id @default(cuid())
  email          String
  token          String       @unique
  organizationId String
  role           OrgRole      @default(MEMBER)
  invitedById    String
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy      User         @relation("InvitesSent", fields: [invitedById], references: [id])

  @@index([email])
  @@index([token])
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

// ============================================
// ORGANIZATIONS & MEMBERSHIPS
// ============================================

model Organization {
  id   String @id @default(cuid())
  name String
  slug String @unique

  // Branding
  logoUrl     String?
  accentColor String? @default("#6366f1") // Indigo

  // Settings
  allowedDomains String[] @default([]) // Domain lockdown (e.g., ["company.com", "corp.com"])

  // AI Settings
  aiEnabled Boolean @default(true)

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  members OrganizationMember[]
  pages   Page[]
  invites Invite[]

  @@index([slug])
  @@index([deletedAt])
}

model OrganizationMember {
  id             String  @id @default(cuid())
  organizationId String
  userId         String
  role           OrgRole @default(MEMBER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// PAGES & CONTENT
// ============================================

model Page {
  id             String @id @default(cuid())
  organizationId String

  // Hierarchy
  parentId String?
  position Int     @default(0) // For ordering siblings

  // Content
  title    String  @default("Untitled")
  icon     String? // Emoji or icon identifier
  coverUrl String?

  // Yjs document state (stored as bytes)
  yjsState Bytes?

  // HTML content (for REST-based saving before Yjs integration)
  htmlContent String?

  // Sharing
  isPublic   Boolean @default(false)
  publicSlug String? @unique

  // Soft delete
  trashedAt DateTime?

  // Audit
  createdById String
  updatedById String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  organization Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  parent       Page?             @relation("PageHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children     Page[]            @relation("PageHierarchy")
  createdBy    User              @relation("PageCreatedBy", fields: [createdById], references: [id])
  updatedBy    User?             @relation("PageUpdatedBy", fields: [updatedById], references: [id])
  favorites    Favorite[]
  versions     PageVersion[]
  permissions  PagePermission[]

  @@index([organizationId])
  @@index([parentId])
  @@index([trashedAt])
  @@index([publicSlug])
  @@index([createdById])
}

// ============================================
// PAGE VERSIONS (Version History)
// ============================================

model PageVersion {
  id        String   @id @default(cuid())
  pageId    String
  version   Int
  title     String
  yjsState  Bytes?
  createdById String
  createdAt DateTime @default(now())

  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  createdBy User     @relation("PageVersionCreatedBy", fields: [createdById], references: [id])

  @@unique([pageId, version])
  @@index([pageId])
}

// ============================================
// PAGE PERMISSIONS
// ============================================

model PagePermission {
  id     String          @id @default(cuid())
  pageId String
  userId String? // Nullable for guest/public access

  // Permission level
  level PermissionLevel @default(VIEW)

  // For guest access links
  shareToken String?   @unique
  expiresAt  DateTime? // Optional expiration for share links

  // Audit
  grantedById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  page      Page  @relation(fields: [pageId], references: [id], onDelete: Cascade)
  user      User? @relation("PagePermissionUser", fields: [userId], references: [id], onDelete: Cascade)
  grantedBy User  @relation("PagePermissionGrantedBy", fields: [grantedById], references: [id])

  @@unique([pageId, userId]) // One permission per user per page
  @@index([pageId])
  @@index([userId])
  @@index([shareToken])
}

enum PermissionLevel {
  VIEW        // Can only view the page
  EDIT        // Can edit content but not share or delete
  FULL_ACCESS // Can edit, share, and manage the page
}

// ============================================
// FAVORITES
// ============================================

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  pageId    String
  position  Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([userId, pageId])
  @@index([userId])
}

// ============================================
// SYSTEM SETTINGS
// ============================================

model SystemSettings {
  id    String @id @default("system")

  // Setup state
  setupCompleted   Boolean   @default(false)
  setupCompletedAt DateTime?
  setupCompletedBy String?

  // General settings
  siteName        String @default("LibreDiary")
  allowSignups    Boolean @default(false) // Invite-only by default

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
